package kosa.basic;

public class LoopExam01 {

	public static void main(String[] args) {
		// while : 초기식 -> 조건식 -> 명령문 -> 증감식 : 수직방향
		// 1~10까지 합
//		int sum = 0;
//		int i = 1;
//		while(i <= 10) {
//			sum += i;
//			i++;
//		}
//		System.out.println("1~10까지 합 : " + sum);

		// 구구단 7단 출력
		// 7 * 1 = 7
		// 7 * 2 = 14
//		int i = 1;
//		while (i <= 9) {
//			System.out.println("7 * " + i + " = " + (7*i));
//			i++;
//		}

		//for문 : 초기식 -> 조건식 -> 명령문 -> 증감식 : 수평 방향
		int sum = 0;
		for(int i = 1; i <= 10; i++) {
			sum += i;
		}
		System.out.println(sum);
	}
}